<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/app-header.ejs') %>
  <main>
    <% if (errorMessage) { %>
    <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <% if(products.length === 0) { %>
    <div class="not-found-wrapper">
      <img src="/img/empty.png" alt="" style="width:500px; max-width:90%;">
      <h1 style="text-align:center"> Product Not Found!</h1>
    </div>
    <% } else { %>
    <div class="grid">
      <% for(let product of products) { %>
      <article class="card product-item">
        <header class="card__header">
          <h1 class="product__title"><%= product.title %></h1>
        </header>
        <div class="card__image">
          <img src="<%= product.imageUrl %>" , alt="">
        </div>
        <div class="card__content">
          <h2 class="product__price"><%= product.price %>/-</h2>
          <p class="product__description"><%= product.description %></p>
        </div>
        <div class="card__actions">
          <a href="/admin/edit-product/<%= product._id %>" class="btn">Edit</a>
          <form action="/admin/delete-product" method="POST" style="display: inline;">
            <input type="hidden" value="<%= product._id %>" name="_id">
            <button type="submit" class="btn">Delete</button>
          </form>
        </div>
      </article>
      <% } %>
    </div>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>